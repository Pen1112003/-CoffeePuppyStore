        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Get_All_Item_Controller</servlet-name>
        <url-pattern>/Get_All_Item_Controller</url-pattern>
